const express = require("express");
const TelegramBot = require("node-telegram-bot-api");

const app = express();

// Env variables
const TOKEN = process.env.BOT_TOKEN;
const URL = process.env."url": "WEBHOOK_URL; // Railway URL
const PORT = process.env.PORT || 3000;

// Bot init (without polling)
const bot = new TelegramBot(TOKEN, { polling: false });

// Webhook path
const webhookPath = `/webhook/${process.env.BOT_SECRET || "mysecret"}`;

// Set webhook
bot.setWebHook(`${URL}${webhookPath}`);

// Express middleware for Telegram
app.use(express.json());

app.post(webhookPath, (req, res) => {
  bot.processUpdate(req.body);
  res.sendStatus(200);
});

// Sample command
bot.onText(/\/start/, (msg) => {
  bot.sendMessage(msg.chat.id, "ðŸ‘‹ Hello! Your bot is live with webhook!");
});

// Root route
app.get("/", (req, res) => {
  res.send("ðŸ¤– Bot running with webhook!");
});

app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});
